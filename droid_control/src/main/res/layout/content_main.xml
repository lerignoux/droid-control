<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context="lerignoux.droid_control.MainActivity"
    android:background="#222222">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:nestedScrollingEnabled="false" >

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="start"
            android:id="@+id/power"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:src="@drawable/power"
            android:scaleType="fitCenter"
            android:background="#222222"
            android:clickable="true" />

        <Button
            android:id="@+id/custom0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#222222"
            android:backgroundTint="#222"
            android:backgroundTintMode="add"
            android:nestedScrollingEnabled="true"
            android:onClick="startScript"
            android:padding="10dp"
            android:singleLine="false"
            android:src="@drawable/script_1"
            android:text="Custom script 0"
            android:textColor="#999999" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom script 1"
            android:id="@+id/custom1"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:nestedScrollingEnabled="true"
            android:background="#222222"
            android:backgroundTint="#222"
            android:backgroundTintMode="add"
            android:src="@drawable/script_2"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#999999" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom script 2"
            android:id="@+id/custom2"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:nestedScrollingEnabled="true"
            android:background="#222222"
            android:backgroundTint="#222"
            android:backgroundTintMode="add"
            android:src="@drawable/script_3"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#999999" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom script 3"
            android:id="@+id/custom3"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:nestedScrollingEnabled="true"
            android:background="#222222"
            android:backgroundTint="#222"
            android:backgroundTintMode="add"
            android:src="@drawable/script_4"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#999999" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom script 4"
            android:id="@+id/custom4"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:nestedScrollingEnabled="true"
            android:background="#222222"
            android:backgroundTint="#222"
            android:backgroundTintMode="add"
            android:src="@drawable/script_5"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#999999" />

    </LinearLayout>
</RelativeLayout>
