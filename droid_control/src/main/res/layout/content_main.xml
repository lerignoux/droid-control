<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context="lerignoux.droid_control.MainActivity"
    android:background="#000000">

    <TextView android:text="What shall I do ?" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#ffffff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:nestedScrollingEnabled="false" >

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="start PC"
            android:id="@+id/power"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:src="@drawable/power"
            android:scaleType="fitCenter"
            android:background="#000000"
            android:clickable="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="play"
                android:id="@+id/play"
                android:layout_gravity="center_horizontal"
                android:onClick="startScript"
                android:src="@drawable/play"
                android:scaleType="fitCenter"
                android:background="#000000" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="stop"
                android:id="@+id/stop"
                android:layout_gravity="center_horizontal"
                android:onClick="startScript"
                android:src="@drawable/stop"
                android:scaleType="fitCenter"
                android:background="#000000" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="next"
                android:id="@+id/next"
                android:nestedScrollingEnabled="false"
                android:onClick="startScript"
                android:src="@drawable/next"
                android:scaleType="fitCenter"
                android:background="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:layout_margin="5dp"
                android:numStars="5"
                android:rating="0"
                android:progressTint="#ffd900"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:layout_gravity="center"
                android:background="#555555"
                android:progressBackgroundTint="#ffd900"
                android:foregroundTint="#ffd900" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom script 0"
            android:id="@+id/custom0"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:nestedScrollingEnabled="true"
            android:background="#111111"
            android:backgroundTint="#222"
            android:backgroundTintMode="add"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#999999" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom script 1"
            android:id="@+id/custom1"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:nestedScrollingEnabled="true"
            android:background="#111111"
            android:backgroundTint="#222"
            android:backgroundTintMode="add"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#999999" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom script 2"
            android:id="@+id/custom2"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:nestedScrollingEnabled="true"
            android:background="#111111"
            android:backgroundTint="#222"
            android:backgroundTintMode="add"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#999999" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom script 3"
            android:id="@+id/custom3"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:nestedScrollingEnabled="true"
            android:background="#111111"
            android:backgroundTint="#222"
            android:backgroundTintMode="add"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#999999" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom script 4"
            android:id="@+id/custom4"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:nestedScrollingEnabled="true"
            android:background="#111111"
            android:backgroundTint="#222"
            android:backgroundTintMode="add"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#999999" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom script 5"
            android:id="@+id/custom5"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:nestedScrollingEnabled="true"
            android:background="#111111"
            android:backgroundTint="#222"
            android:backgroundTintMode="add"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#999999" />

    </LinearLayout>
</RelativeLayout>
