<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context="lerignoux.droid_control.MainActivity">

    <TextView android:text="What shall I do ?" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:nestedScrollingEnabled="false"
        android:onClick="onButtonClick">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start PC"
            android:id="@+id/start"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="play"
                android:id="@+id/play"
                android:layout_gravity="center_horizontal"
                android:onClick="onButtonClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stop"
                android:id="@+id/stop"
                android:layout_gravity="center_horizontal"
                android:onClick="onButtonClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="next"
                android:id="@+id/next"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="false"
                android:onClick="onButtonClick" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank0"
                android:checked="false"
                android:layout_gravity="center"
                android:onClick="onButtonClick" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank1"
                android:checked="false"
                android:layout_gravity="center"
                android:onClick="onButtonClick" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank2"
                android:checked="false"
                android:layout_gravity="center"
                android:onClick="onButtonClick" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank3"
                android:checked="false"
                android:layout_gravity="center"
                android:onClick="onButtonClick" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank4"
                android:checked="false"
                android:layout_gravity="center"
                android:onClick="onButtonClick" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank5"
                android:checked="false"
                android:layout_gravity="center"
                android:onClick="onButtonClick" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank6"
                android:checked="false"
                android:onClick="onButtonClick" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank7"
                android:checked="false"
                android:onClick="onButtonClick" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank8"
                android:checked="false"
                android:onClick="onButtonClick" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank9"
                android:checked="false"
                android:onClick="onButtonClick" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank10"
                android:checked="false"
                android:onClick="onButtonClick" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="custom0"
            android:id="@+id/custom0"
            android:layout_gravity="center_horizontal"
            android:onClick="onButtonClick"
            android:nestedScrollingEnabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="custom1"
            android:id="@+id/custom1"
            android:layout_gravity="center_horizontal"
            android:onClick="onButtonClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="custom2"
            android:id="@+id/custom2"
            android:layout_gravity="center_horizontal"
            android:onClick="onButtonClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="custom3"
            android:id="@+id/custom3"
            android:layout_gravity="center_horizontal"
            android:onClick="onButtonClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="custom4"
            android:id="@+id/custom4"
            android:layout_gravity="center_horizontal"
            android:onClick="onButtonClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="custom5"
            android:id="@+id/custom5"
            android:layout_gravity="center_horizontal"
            android:onClick="onButtonClick" />

    </LinearLayout>
</RelativeLayout>
