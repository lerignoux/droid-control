<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:weightSum="1"
    android:nestedScrollingEnabled="false" >

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:padding="0dp"
        android:text="start"
        android:id="@+id/power"
        android:layout_gravity="center_horizontal"
        android:onClick="startScript"
        android:src="@drawable/power"
        android:scaleType="fitCenter"
        android:background="@color/colorBackground"
        android:clickable="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="play"
            android:id="@+id/audio_play"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:src="@drawable/play"
            android:scaleType="fitCenter"
            android:background="@color/colorBackground" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="pause"
            android:id="@+id/audio_pause"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:src="@drawable/pause"
            android:scaleType="fitCenter"
            android:background="@color/colorBackground" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="stop"
            android:id="@+id/audio_stop"
            android:layout_gravity="center_horizontal"
            android:onClick="startScript"
            android:src="@drawable/stop"
            android:scaleType="fitCenter"
            android:background="@color/colorBackground" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="next"
            android:id="@+id/audio_next"
            android:nestedScrollingEnabled="false"
            android:onClick="startScript"
            android:src="@drawable/next"
            android:scaleType="fitCenter"
            android:background="@color/colorBackground" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="volume up"
            android:id="@+id/audio_volumeUp"
            android:nestedScrollingEnabled="false"
            android:onClick="startScript"
            android:src="@drawable/volume_up"
            android:scaleType="fitCenter"
            android:background="@color/colorBackground" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/audio_ratingBar"
            android:layout_margin="6dp"
            android:numStars="5"
            android:rating="0"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="volume down"
            android:id="@+id/audio_volumeDown"
            android:nestedScrollingEnabled="false"
            android:onClick="startScript"
            android:src="@drawable/volume_down"
            android:scaleType="fitCenter"
            android:background="@color/colorBackground" />

    </LinearLayout>
</LinearLayout>
